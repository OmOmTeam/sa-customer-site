<% include components/header_loggedin %>

<div class="container">
  <div style="padding-top: 80px;" class="container text-center">
    <h3>Add News</h3><br>
  </div><br>
  <form class="form-horizontal" action="#" method="post" style="padding-bottom: 30px">
   <div class="form-group">
     <label class="control-label col-sm-offset-3 col-sm-2" for="name">Name:</label>
     <div class="col-sm-3">
       <input type="input" class="form-control" id="name" placeholder="News Name">
     </div>
   </div>
   <div class="form-group">
     <label class="control-label col-sm-offset-3 col-sm-2" for="brief-desc">Brief Description:</label>
     <div class="col-sm-3">
       <input type="input" class="form-control" id="brief-desc" placeholder="Brief Description">
     </div>
   </div>
   <div class="form-group">
     <label class="control-label col-sm-offset-3 col-sm-2" for="full-desc">Full Description:</label>
     <div class="col-sm-3">
       <textarea class="form-control" rows="7" id="full-desc"></textarea>
     </div>
   </div>
   <div class="form-group">
     <label class="control-label col-sm-offset-3 col-sm-2" for="address">Upload Image:</label>
     <div class="col-sm-offset-1 col-sm-1">
			    <input type="file" name="image"/>
			</div>
   </div>
   <div class="form-group">
     <div class="col-sm-offset-5 col-sm-1">
       <button type="submit" class="btn btn-success">Add</button>
     </div>
   </div>
  </form>

</div>


<% include components/footer %>

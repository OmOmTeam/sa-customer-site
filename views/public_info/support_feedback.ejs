<% include components/header %>

<script>
function send_feedback($this){
    console.log("button clicked");
    var request_data = $this.id;
    console.log("data: " + request_data)
    alert("Thank you for your feedback! It is very important to us.")
}
</script>

<div style="padding-top: 50px" class="container text-center">
  <h3>Send Feedback</h3><br>
</div><br>

<form class="form-horizontal" action="/support_feedback" method="post">
 <div class="row form-group">
   <label class="control-label col-sm-offset-3 col-sm-2" for="name">Your Name*:</label>
   <div class="col-sm-3">
     <input type="input" class="form-control" id="name" name="name" placeholder="Your Name" required>
   </div>
 </div>
 <div class="row form-group">
   <label class="control-label col-sm-offset-3 col-sm-2" for="email">Your Email*:</label>
   <div class="col-sm-3">
     <input type="email" class="form-control" id="email" name="email" placeholder="Your Email" required>
   </div>
 </div>
 <div class="row form-group">
   <label class="control-label col-sm-offset-3 col-sm-2" for="feedback">Your Feedback*:</label>
   <div class="col-sm-3">
     <textarea class="form-control" rows="5" id="feedback" name="feedback" required></textarea>
   </div>
 </div>
 <div class="row form-group">
   <div class="col-sm-offset-5 col-sm-1">
     <button id="send-feedback" type="submit" class="btn btn-success" onclick="send_feedback(this)">Send</button>
   </div>
 </div>
</form>


<footer style="position: absolute; bottom: 0; width: 100%;" class="container text-center">
  <p>ACME Inc.</p>
  <p>2000 - 2018 </p>
</footer>

</body>
</html>

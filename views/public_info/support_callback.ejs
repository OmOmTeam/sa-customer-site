<% include components/header %>

<script>
function reserve_callback($this){
    console.log("button clicked");
    var request_data = $this.id;
    console.log("data: " + request_data)
    alert("Your request for callback has been sent. Please, wait for call from our operator.")
}
</script>

<div style="padding-top: 50px" class="container text-center">
  <h3>Reserve Callback</h3><br>
</div><br>

<form class="form-horizontal" action="/support_callback" method="post">
 <div class="form-group">
   <label class="control-label col-sm-offset-3 col-sm-2" for="name">Your Name:</label>
   <div class="col-sm-3">
     <input type="input" class="form-control" id="name" placeholder="Your Name">
   </div>
 </div>
 <div class="form-group">
   <label class="control-label col-sm-offset-3 col-sm-2" for="phone">Your Phone:</label>
   <div class="col-sm-3">
     <input type="input" class="form-control" id="phone" placeholder="Your Phone Number">
   </div>
 </div>
 <div class="form-group">
   <div class="col-sm-offset-5 col-sm-1">
     <button id="reserve-callback" type="submit" class="btn btn-success" onclick="reserve_callback(this)">Reserve</button>
   </div>
 </div>
</form>

<footer style="position: absolute; bottom: 0; width: 100%;" class="container text-center">
  <p>ACME Inc.</p>
  <p>2000 - 2018 </p>
</footer>

</body>
</html>

<% include components/header %>

<script>
function payment_success($this){
    console.log("button clicked");
    var request_data = $this.id;
    console.log("data: " + request_data)
    alert("You have successfully paid for Your order!")
}
</script>

<div class="container">
  <div style="padding-top: 80px" class="text-center">
    <h3>Payment</h3><br>
    Here You can pay for your order online. All Your data is protected.</br>
    We do not store any private paying information.
  </div>
  <br>
  <hr />
  <form class="form-horizontal">
   <div class="row form-group">
     <label class="control-label col-sm-offset-3 col-sm-2" for="card_number">Card number*:</label>
     <div class="col-sm-3">
       <input type="input" class="form-control" id="card_number" name="card_number" placeholder="1234567890123456" required>
     </div>
   </div>
   <div class="row form-group">
     <label class="control-label col-sm-offset-3 col-sm-2" for="card_name">Cardholder Name*:</label>
     <div class="col-sm-3">
       <input type="input" class="form-control" id="card_name" name="card_name" placeholder="Ivan Ivanov" required>
     </div>
   </div>
   <div class="row form-group">
     <label class="control-label col-sm-offset-3 col-sm-2" for="card_expiry">Expiry date*:</label>
     <div class="col-sm-3">
       <input type="input" class="form-control" id="card_expiry" name="card_expiry" placeholder="12/21" required>
     </div>
   </div>
   <div class="row form-group">
     <label class="control-label col-sm-offset-3 col-sm-2" for="card_cvc">CVC*:</label>
     <div class="col-sm-3">
       <input type="password" class="form-control" id="card_cvc" name="card_cvc" required>
     </div>
   </div>
  </form>
  <div class="row">
    <div class="col-sm-offset-5 col-md-1">
      <a href="/user/manage_orders" onclick="payment_success(this)" class="btn btn-success">Pay</a>
    </div>
  </div>
  <hr />
</div>

<footer style="position: absolute; bottom: 0; width: 100%;" class="container text-center">
  <p>ACME Inc.</p>
  <p>2000 - 2018 </p>
</footer>

</body>
</html>
